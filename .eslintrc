{
  "extends": [
    "plugin:mocha/recommended",
    "plugin:mocha/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-console": "off",
    "prefer-arrow-callback": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "any"
      }
    ],
    "mocha/no-mocha-arrows": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "plugins": [
    "mocha"
  ]
}
